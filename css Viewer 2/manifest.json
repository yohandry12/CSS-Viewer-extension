{
  "manifest_version": 3,
  "name": "CSS Viewer Pro",
  "version": "1.0",
  "description": "Survolez les éléments pour inspecter rapidement leurs styles CSS.",

  "permissions": ["activeTab", "scripting", "storage"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png"
  }
}
